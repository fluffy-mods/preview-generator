{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "lib": ["ES2020"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node"
    }
}
